<Window x:Class="UrlThing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <BitmapImage x:Key="whirlImage" UriSource="Images/Whirl.png" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="234*" />
            <ColumnDefinition Width="269*" />
        </Grid.ColumnDefinitions>
        <Image Source="{StaticResource whirlImage}" Grid.Column="0"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>
            <Button Content="Button" Height="66" HorizontalAlignment="Left" Name="button1" VerticalAlignment="Top" Width="110" Grid.RowSpan="2" />
            <Border BorderBrush="Silver" BorderThickness="1" Height="66" HorizontalAlignment="Left" Margin="18,38,0,0" Name="border1" VerticalAlignment="Top" Width="104" Grid.RowSpan="2" Grid.Column="1" />
        </Grid>

    </Grid>
</Window>
